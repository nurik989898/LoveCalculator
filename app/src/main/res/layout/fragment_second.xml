<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.SecondFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="750dp"
            android:background="@drawable/tree"

            />

    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mart"
            android:text="Bill"
            android:textColor="@color/black"
            android:textSize="40dp"
            app:layout_constraintTop_toBottomOf="@id/couImg"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/Anny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mart"
            android:text="Anny"
            android:textColor="@color/black"
            android:textSize="40dp"
            app:layout_constraintTop_toBottomOf="@id/couImg"
           app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"/>
        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cinzel"
            android:text="All the best"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@id/result"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/couImg"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_gravity="center"
            android:background="@drawable/couple"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/result"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/cinzel"
            android:text="100%"
            android:textSize="50dp"
            app:layout_constraintStart_toStartOf="@id/bill"
            app:layout_constraintEnd_toEndOf="@id/Anny"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/loLo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:background="@drawable/lol"
            app:layout_constraintBottom_toTopOf="@+id/btnAgain"
            app:layout_constraintEnd_toEndOf="parent" />
        <Button
            android:id="@+id/btnAgain"
            android:fontFamily="@font/mart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="70dp"
            android:layout_marginEnd="20dp"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:text="Try Again"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:background="@drawable/btn"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>